<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">


            <ImageView
                android:id="@+id/imageViewProductImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"
                android:contentDescription="Image product"
                app:srcCompat="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/textViewProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageViewProductImage"
                android:text="ProductName"

                android:textSize="30sp" />

            <TextView
                android:id="@+id/textViewLabelProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageViewProductImage"
                android:layout_toEndOf="@id/imageViewProductImage"
                android:text="Prezzo:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/imageViewProductImage"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/textViewLabelProductPrice"
                android:text="ProductPrice"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewQuantityProductToBuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageViewProductImage"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/textViewTotalPriceProduct"
                android:text="@string/textview_label_quantityproducttobuy" />

            <TextView
                android:id="@+id/textViewTotalPriceProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageViewProductImage"
                android:layout_alignParentEnd="true"
                android:text="@string/textview_label_totaleuros" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
